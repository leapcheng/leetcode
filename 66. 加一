class Solution {
    public int[] plusOne(int[] digits) {
        int k = 0;
        int temp = 0;
        int n = digits.length;
        for(int i = n - 1; i >= 0; i--){
            temp = i == n - 1 ? k + digits[i] + 1 : k + digits[i];
            digits[i] = temp % 10;
            k = temp / 10;
            if(k == 0){
                return digits;
            }
        }

        int[] res = new int[digits.length + 1];
        res[0] = 1;
        return res;
    }
}
