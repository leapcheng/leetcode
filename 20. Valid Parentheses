class Solution {
    public boolean isValid(String s) {
        if(s == null || s.equals("")){
            return true;
        }
        char[] cs = s.toCharArray();
        Stack<Character> stack = new Stack<>();
        stack.push(cs[0]);
        for(int i = 1; i < cs.length; i++){
            if(stack.isEmpty() || cs[i] == '(' || cs[i] == '[' || cs[i] == '{'){
                stack.push(cs[i]);
            }else if(cs[i] == ')' && stack.peek() == '(' || cs[i] == '}' && stack.peek() == '{' || cs[i] == ']' && stack.peek() == '['){
                stack.pop();
            }else{
                return false;
            }
        }
        return stack.isEmpty();
    }
}
