class Solution {
    public int romanToInt(String s) {
        char[] cs = s.toCharArray();
        int sum = 0;
        int i = 0;
        while(i < cs.length) {
            if(cs[i] == 'M') {
                sum += 1000;
                ++i;
            }else if(cs[i] == 'D') {
                sum += 500;
                ++i;
            }else if(cs[i] == 'C') {
                if(i + 1 < cs.length && cs[i + 1] == 'D') {
                    sum += 400;
                    i += 2;
                }else if(i + 1 < cs.length && cs[i + 1] == 'M') {
                    sum += 900;
                    i += 2;
                }else {
                    sum += 100;
                    ++i;
                }
            }else if(cs[i] == 'L') {
                sum += 50;
                ++i;
            }else if(cs[i] == 'X') {
                if(i + 1 < cs.length && cs[i + 1] == 'L') {
                    sum += 40;
                    i += 2;
                }else if(i + 1 < cs.length && cs[i + 1] == 'C') {
                    sum += 90;
                    i += 2;
                }else {
                    sum += 10;
                    ++i;
                }
            }else if(cs[i] == 'V') {
                sum += 5;
                ++i;
            }else {
                if(i + 1 < cs.length && cs[i + 1] == 'V') {
                    sum += 4;
                    i += 2;
                }else if(i + 1 < cs.length && cs[i + 1] == 'X') {
                    sum += 9;
                    i += 2;
                }else {
                    sum += 1;
                    ++i;
                }
            }
        }
        return sum;
    }
}
