class Solution {
    public int lengthOfLastWord(String s) {
        int count = 0;
        int k = 0; //k是为了防止最后出现空格的情况，如果直接count = 0；，最后有空格时，输出就是0了
        for(int i = 0; i < s.length(); i++){
            if(s.charAt(i) != ' '){
                if(k == 0){
                    count = 1;
                    k = 1;
                }else{
                    count++;
                }
            }else{
                k = 0;
            }
        }
        return count;
    }
}
