class Solution {
    public int threeSumClosest(int[] nums, int target) {
        Arrays.sort(nums);
        int min = nums[0] + nums[1] + nums[2];
        for(int i = 0; i < nums.length - 2; i++){
            if(i > 0 && nums[i] == nums[i - 1]){
                continue;
            }
            int l = i + 1;
            int r = nums.length - 1;
            while(l < r){
                int cur = nums[i] + nums[l] + nums[r];
                if(Math.abs(cur - target) < Math.abs(min - target)){
                    min = cur;
                }
                if(cur > target){
                    r--;
                }else if(cur < target){
                    l++;
                }else{
                    return target;
                }
            }
        }
        return min;
    }
}
